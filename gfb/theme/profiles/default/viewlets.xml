<?xml version="1.0"?>
<object>
    <order manager="plone.portaltop" skinname="GFBTheme">
           <viewlet name="gfb.topborder" />
           <viewlet name="plone.header" />
           <viewlet name="plone.personal_bar" />
           <viewlet name="gfb.path_bar" />
    </order>
    <order manager="plone.portalheader" skinname="GFBTheme">
        <viewlet name="plone.skip_links" />
        <viewlet name="gfb.languageselector" />
        <viewlet name="plone.site_actions" />
        <viewlet name="gfb.site_title" />
        <viewlet name="plone.logo" />
        <viewlet name="gfb.global_sections" />
    </order>
    <hidden manager="plone.htmlhead" skinname="GFBTheme">
        <viewlet name="plone.resourceregistries" />
    </hidden>
    
    <order manager="plone.portalfooter" skinname="GFBTheme"
           based-on="Plone Classic Theme">
        <viewlet name="gfb.footer.actions"
                 insert-before="*" />
    </order>

    <order manager="plone.abovecontenttitle" skinname="GFBTheme"
           based-on="Plone Classic Theme">
        <viewlet name="gfb.abovecontenttitle.documentcontent"
                 insert-before="*" />
    </order>

    <order manager="plone.belowcontentbody" skinname="GFBTheme"
        based-on="Plone Classic Theme">
        <viewlet name="slc.linkcollection.linkbox" />
        <viewlet name="plone.belowcontentbody.contenthistory" />
        <viewlet name="gfb.abovecontenttitle.documentactions" />
    </order>

    <hidden manager="plone.belowcontentbody" skinname="GFBTheme">
        <viewlet name="plone.abovecontenttitle.documentactions" />
    </hidden>
    
    <hidden manager="plone.abovecontent"  skinname="GFBTheme">
      <viewlet name="plone.path_bar" />
    </hidden>

    <hidden manager="plone.belowcontent"  skinname="GFBTheme">
      <viewlet name="plone.belowcontenttitle.keywords" />
    </hidden>

    <hidden manager="plone.portalheader" skinname="GFBTheme">
        <viewlet name="plone.searchbox" />
        <viewlet name="plone.global_sections" />
        <viewlet name="plone.app.i18n.locales.languageselector" />
        <viewlet name="plone.personal_bar" />
    </hidden>
    <hidden manager="plone.portalfooter" skinname="GFBTheme">
      <viewlet name="plone.footer" />
      <viewlet name="plone.colophon" />
    </hidden>


</object>
