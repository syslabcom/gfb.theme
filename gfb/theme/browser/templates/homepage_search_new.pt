<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gfb">

<metal:cssslot fill-slot="css_slot">
<style type="text/css" media="all" tal:condition="exists: portal/riskassessment_styles.css"
       tal:content="string:@import url($portal_url/riskassessment_styles.css);">
</style>

<!-- <style type="text/css" media="all" tal:condition="exists: portal/jquery-ui.css"
       tal:content="string:@import url($portal_url/jquery-ui.css);">
</style> -->

</metal:cssslot>

<metal:javascriptslot fill-slot="javascript_head_slot">

  <script language="JavaScript">
  function resetSize(aSelect) {
    if(aSelect) {
      aSelect.style.width = 'auto';
    }
  }
  </script>

<script type="text/javascript" src="livesearch_ralinks.js"
    tal:attributes="src string:$portal_url/livesearch_ralinks.js">
</script>

<script type="text/javascript" src="jquery-ui-1.8.custom.min.js"
    tal:attributes="src string:$portal_url/jquery-ui-1.8.custom.min.js">
</script>

<script type="text/javascript" src="jquery.tooltip.js"
    tal:attributes="src string:$portal_url/jquery.tooltip.js">
</script>

<script type="text/javascript">
    jq(function() {
    jq('#four_steps a').tooltip(
        {
        track: true,
        delay: 0,
        showURL: false,
        showBody: " - ",
        fade: 250,
        attach_to: '#four_steps'
        }
    );
    });


var ArrowBlue = "foursteps_background.jpg";    
var ArrowPink1 = "foursteps_pink1.jpg";
var ArrowPink2 = "foursteps_pink2.jpg";
var ArrowPink3 = "foursteps_pink3.jpg";
var ArrowPink4 = "foursteps_pink4.jpg";

function ChangeImage(Bildname,Tauschbildname)
{
document.images[Bildname].src = eval(Tauschbildname);
}

</script>

</metal:javascriptslot>

<metal:block fill-slot="top_slot"
                   tal:define="dummy python:request.set('disable_border',1)" />
<!--metal:block fill-slot="column_two_slot" /-->


<body>
<div metal:fill-slot="main"
     tal:define="site_properties context/portal_properties/site_properties|nothing;
                use_types_blacklist request/use_types_blacklist | python:True;
                use_navigation_root request/use_navigation_root | python:True;
                dummy python:request.set('portal_type', 'RiskAssessmentLink');
                Batch python:modules['Products.CMFPlone'].Batch;
                use_view_action site_properties/typesUseViewActionInListings|python:();
                SearchableText request/SearchableText|string:;
                nace request/nace|string:;
                nace python:nace==[''] and '' or nace;
                provider request/remote_provider|python:'';
                provider python:provider==[''] and '' or provider;
                category request/category|string:;
                getRemoteLanguage request/getRemoteLanguage|string:;
                country request/country|string:;
                getCategoryIndependent request/getCategoryIndependent|string:0;
                getCategoryIndependent python:bool(int(getCategoryIndependent));
                riskfactors request/riskfactors|string:;
                riskfactors python:riskfactors==[''] and '' or riskfactors;
                DateTime python:modules['DateTime'].DateTime;
                b_size python:10;b_start python:0;
                b_start request/b_start | b_start;
                desc_length site_properties/search_results_description_length;
                desc_ellipsis site_properties/ellipsis;
                searchterm request/SearchableText|nothing;
                results view/search;
                           ">
           
           
           
    <tal:block define="index_foursteps nocall:here/index_foursteps | nothing"
         tal:condition="index_foursteps">
        
        <h1 class="documentFirstHeading frontpage" tal:content="index_foursteps/Title"></h1>
        
        <div id="four_steps">
            <div class="visualClear"></div>
            <span tal:replace="structure index_foursteps/getText|nothing" />
        </div>
         
    </tal:block>



<h1 class="documentFirstHeading frontpage" i18n:translate="label_aktuelle_infos">Aktuelle Infos</h1>


    <div id="tabs" class="tab-1-selected">
        <ul class="search-top">
            <li><a href="#tabs-1" class="selected"
     id="tabs-1-link" i18n:translate="label_top_thema">Top Thema</a></li>
            <li><a href="#tabs-2"
    id="tabs-2-link" i18n:translate="label_gute_praxis">Aktuelles Beispiel guter Praxis</a></li>
        </ul>
        <div id="tabs-1" class="ui-tabs-panel">
          <span tal:define="obj nocall:view/top_thema">
            <span tal:condition="obj">
                <span tal:content="python:context.toLocalizedTime(obj.effective())" />
                <h3 tal:content="obj/Title" />
                 <div tal:replace="structure obj/Description" />
                 <div><a href="." tal:attributes="href obj/absolute_url"
                     i18n:translate="box_morelink" i18n:domain="plone">More...</a></div>
            </span>
            <span tal:condition="not:obj">
                <div i18n:translate="info_no_topthema">Es wurde kein aktuelles Top Thema gefunden</div>
            </span>
          </span>
        </div>
        <div id="tabs-2" class="ui-tabs-panel">
        <span tal:define="obj nocall:view/gute_praxis">
            <span tal:condition="obj">
                <span tal:content="python:context.toLocalizedTime(obj.effective())" />
                <h3 tal:content="obj/Title" />
                 <div tal:replace="structure obj/Description" />
                 <div><a href="." tal:attributes="href obj/absolute_url"
                     i18n:translate="box_morelink" i18n:domain="plone">More...</a></div>
            </span>
            <span tal:condition="not:obj">
                <div i18n:translate="info_no_goodpractice">Es wurde kein aktuelles "Besipiel guter Praxis" gefunden.</div>
            </span>
        </span>
        </div>

    </div>

<div class="visualClear">&nbsp;</div>
<h1 class="documentFirstHeading frontpage" i18n:translate="label_datenbanksuche">Datenbanksuche</h1>

  <form name="searchform" id="searchform"
        action="advanced_search"
        tal:attributes="action string:${portal_url}/${here/portal_languages/getPreferredLanguage}/handlungshilfen/datenbank/advanced_search"
        class="searchPage searchform-controls">
        
        <div metal:define-macro="main">

        <div class="LSResultRALinks" id="LSResultRALinks" style=""><div class="LSShadow" id="LSShadow"></div></div>


          <div id="simplesearch">
            <ul class="search-top">
              <li><a class="selected" id="searchdatabase"
                     i18n:translate="label_advanced_search" 
                     href="homepage_search">Search the Database</a>
              </li>
              <li>
                  <a href="searchtipps" id="searchtipps"
                     i18n:translate="label_searchtips">Search Tips</a>
              </li>
            </ul>
          </div>
          
          
          <div id="searchfields">

            <div id="searchtippstext" tal:define="tipps python:getattr(here, 'searchtipps', None)">
                <span tal:replace="structure tipps/getText |nothing" />
            </div>

            <div id="searchcontrols" class="LSBoxRALinks">          
                <input id="SearchableText" 
                       type="text" 
                       name="SearchableText" 
                       size="25" 
                       class="inputLabel"
                       tal:attributes="value request/SearchableText|string:;
                                       title view/getFillText;"/>
                <br />

                <div id="and_or_box">
                    <p class="formHelp" 
                       i18n:translate="help_and_or">
                        und/oder
                    </p>
                </div>

                
                <div class="column1b">
                                   
                   
                    <div class="common_radio_search_box">
                    <input class="radio_search" 
                           id="radio_category_special"
                           type="radio" 
                           value="0" 
                           name="getCategoryIndependent" 
                           tal:attributes="checked python:getCategoryIndependent==False"> 
                    <label i18n:translate="label_special_guideline">Special Action Guideline</label>
                    </div>

                    <div>
                    <input class="radio_search" 
                           id="radio_category_common"
                           type="radio" 
                           value="1" 
                           name="getCategoryIndependent" 
                           tal:attributes="checked python:getCategoryIndependent==True">

                    <label i18n:translate="label_common_introduction">Common and Introductory Action Guideline</label>
                    </div>
                        

                    <div class="visualClear"></div>

                </div>
                
                <div class="column2b">
                
                    <span tal:omit-tag="" i18n:translate="label_restrict_by">restrict by</span>...

                    <ul class="search_index">
                    
                    <li id="search_control_remote_provider">
                          <tal:define define="fieldName   string:remote_provider;
                                              vocab       python:view.getVocabulary('provider');
                                              selected    request/form/remote_provider|nothing;
                                            ">
                            <span>Anbieter</span>
                            <div tal:attributes="id string:tree_${fieldName}" />
                            <tal:block replace="structure python:view.getDynatreeScript(vocab, fieldName, selected)" />

                          </tal:define>
                        
                    </li>
                    <li id="search_control_nace" class="search_deactivatable disabled"
                    tal:attributes="class python:request.get('getCategoryIndependent', '0')=='1' and 'search_deactivatable disabled' or 'search_deactivatable'">
                        <metal:macro define-macro="NACE_compact">
                          <tal:define define=" fieldName   string:nace;
                                               vocab       python:view.getVocabulary('NACE');
                                               selected    request/form/nace|nothing;
                                            ">
                            <span>Branche</span>
                            <div tal:attributes="id string:tree_${fieldName}" />
                            <tal:block replace="structure python:view.getDynatreeScript(vocab, fieldName, selected)" />
                          </tal:define>
                        </metal:macro>
                    </li>
                    <li id="search_control_riskfactors" class="search_deactivatable disabled"
                    tal:attributes="class python:request.get('getCategoryIndependent', '0')=='1' and 'search_deactivatable disabled' or 'search_deactivatable'">                    
                        <metal:macro define-macro="riskfactors">
                            <tal:define define="fieldName  string:riskfactors;
                                                vocab      python:view.getVocabulary('RiskFactors');
                                                selected   request/form/riskfactors|nothing;
                                            ">
                            <span>Gefährdungsart</span>
                            <div tal:attributes="id string:tree_${fieldName}" />
                            <tal:block replace="structure python:view.getDynatreeScript(vocab, fieldName, selected)" />
                          </tal:define>
                        </metal:macro>
                    </li>
                    </ul>
                    </div>

                    <div class="visualClear"></div>

                    <div class="submit_column">

                            <input class="context cancelbutton" 
                               type="submit" 
                               name="submit" 
                               value="Search" 
                               i18n:attributes="value label_search;"/>

                    </div>
              </div>


          </div>

            
        </div>
        <p>&nbsp;</p>
  </form>



</div>
</body>
</html>



