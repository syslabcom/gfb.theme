<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="gfb">


<body>
<div metal:fill-slot="main" 
	 tal:define="data view/data;">

	<script language="javascript">
	var currentidx = "A";
	function updateFilter() {
		jq('.glossary_idx').removeClass('glossary_idx_highlight');
		jq('.'+currentidx).addClass('glossary_idx_highlight');
		jq('.toggle_container').hide();
		jq('.toggle_trigger').hide();
		jq('.'+currentidx).show();		
	}

	jq(document).ready(function(){
		updateFilter();
		//Slide up and down & toggle the Class on click
		jq('.toggle_trigger').click(function(){
			jq(this).next('.toggle_container').slideToggle('fast');
			jq(this).toggleClass('pfeilextra');
		});
	  }
	  
	);
	function selectIdx(idx) {
		currentidx = idx;
		updateFilter();
	}
	</script>

	<h1 class="documentFirstHeading" id="glossarHeader">Glossar</h1>
<span tal:replace="python:[x['idx'] for x in data]"/>
	<div id="alphabetischeTabelle" width="200" float="left">
		<table id="alphabetTable" width="200">
